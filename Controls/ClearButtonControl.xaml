<UserControl x:Class="FootballApp.Controls.ClearButtonControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:customControls="clr-namespace:FootballApp.Controls.buttons"
             Height="600" Width="400"
             DataContext="{Binding Source={StaticResource mainViewModelLocator}, Path=CountryViewModel}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <customControls:CircularButton Visibility="{Binding ClearButton, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Hidden}"
                                       Grid.Column="1" 
                                       Grid.Row="1"
                                       IconGlyph="&#xf2ea;"
                                       ToolTip="Clear Selection"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontSize="14"
                                       Width="35" Height="35"
                                       Command="{Binding ClearSelectionCommand}"/>
    </Grid>
</UserControl>
