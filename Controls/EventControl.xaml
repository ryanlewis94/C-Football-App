<UserControl x:Class="FootballApp.Controls.EventControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:customControls="clr-namespace:FootballApp.Controls.buttons"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="400"
             DataContext="{Binding Source={StaticResource mainViewModelLocator}, Path=EventsViewModel}">
    <StackPanel>
        <!--Back Button-->
        <!--<customControls:CircularButton Command="{Binding CloseMatchCommand}"
                                           ToolTip="Back"
                                           IconGlyph="&#xf0a8;"
                                           FontSize="20"
                                           Margin="5"
                                           HorizontalAlignment="Left"/>-->
        <!--Home and Away Score Display-->
        <StackPanel DataContext="{Binding CurrentMatch}"
                    Margin="0,0,0,10"
                    Visibility="{Binding DataContext.MatchSelected, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4.5*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="4.5*" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="{Binding home_name}" 
                           Grid.Column="0"
                           FontSize="24"
                           FontWeight="SemiBold"
                           TextWrapping="Wrap"
                           HorizontalAlignment="Center"/>
                <StackPanel Grid.Column="1">
                    <TextBlock Text="{Binding score}"
                               FontWeight="SemiBold" 
                               FontSize="24"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding time}" 
                               FontWeight="Bold"
                               FontSize="16"
                               HorizontalAlignment="Center"/>
                </StackPanel>
                <TextBlock Text="{Binding away_name}" 
                           Grid.Column="2"
                           FontSize="24"
                           FontWeight="SemiBold"
                           TextWrapping="Wrap"
                           HorizontalAlignment="Center"/>
            </Grid>
        </StackPanel>

        <StackPanel DataContext="{Binding CurrentFixture}"
                    Margin="0,0,0,10"
                    Visibility="{Binding DataContext.FixtureSelected, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*" />
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="4*" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="{Binding home_name}" 
                           Grid.Column="0"
                           FontSize="24"
                           FontWeight="SemiBold"
                           TextWrapping="Wrap"
                           HorizontalAlignment="Center"/>
                <TextBlock Grid.Column="1" 
                           Text="{Binding time}" 
                           FontWeight="Bold"
                           FontSize="16"
                           HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding away_name}" 
                           Grid.Column="2"
                           FontSize="24"
                           FontWeight="SemiBold"
                           TextWrapping="Wrap"
                           HorizontalAlignment="Center"/>
            </Grid>
            <TextBlock Text="{Binding DataContext.CountdownTime, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}}"
                       FontSize="40"
                       FontWeight="Bold"
                       TextWrapping="Wrap"
                       HorizontalAlignment="Center"
                       Margin="50"/>
            <TextBlock Text="Until Kick Off"
                       FontSize="28"
                       FontWeight="Bold"
                       TextWrapping="Wrap"
                       HorizontalAlignment="Center"/>
            
        </StackPanel>

        <!--List of live events-->
        <Grid Visibility="{Binding DataContext.MatchSelected, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4.5*" />
                <ColumnDefinition Width="4.5*" />
            </Grid.ColumnDefinitions>
            <!--Home Events-->
            <ListView Grid.Column="0"
                      ItemsSource="{Binding HomeEventsList}"
                      HorizontalAlignment="Stretch">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="8*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <Image Source="{Binding event}"
                                       Height="26"
                                       Width="26"/>
                                <TextBlock Text="{Binding time}"
                                           HorizontalAlignment="Center"
                                           FontSize="16"/>
                            </StackPanel>
                            <TextBlock Text="{Binding player}"
                                       Grid.Column="1"
                                       HorizontalAlignment="Center"
                                       FontSize="18"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            
            <!--Away Events-->
            <ListView Grid.Column="1"
                      ItemsSource="{Binding AwayEventsList}"
                      HorizontalAlignment="Stretch">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="8*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="1">
                                <Image Source="{Binding event}"
                                       Height="26"
                                       Width="26"/>
                                <TextBlock Text="{Binding time}"
                                           HorizontalAlignment="Center"
                                           FontSize="16"/>
                            </StackPanel>
                            <TextBlock Text="{Binding player}"
                                       Grid.Column="0"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontSize="18"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </StackPanel>
</UserControl>
